@require "./normalize"

//
// spacing & flow
//
margin = 1.5rem
*
  margin-top 0
* + *
  margin-top margin

html
  // 1 rem is 20px
  font-size 125%
  line-height 1.5

h1, h2, h3, h4, h5, h6, li, p, span
  // MASSIVELY slows down page load when on body element :(
  text-rendering optimizeLegibility

h1, h2, h3, h4, h5, h6, ul, ol, p, .logos, hr, blockquote
  margin-left auto
  margin-right auto

  // gives 10px left and right space on iphone 3G
  max-width 300px

  @media screen and (min-width: 450px)
    max-width 430px

  @media screen and (min-width: 543px)
    max-width 523px

  // wide enough for my name on one line, with 10px breathing
  @media screen and (min-width: 600px)
    max-width 590px

  // big enough for 33em, with 10px breathing
  @media screen and (min-width: 680px)
    max-width 33rem

h1
  margin-top 4*margin

header h2 + *
  margin-top 0

// make case studies spaced out;
// li > ul,
// keep bullets close together
li + li
  margin-top initial

header, footer
  width 100%
  padding-top 2*margin
  padding-bottom 2*margin
  font-size margin

nav
  line-height 2 // damian's advice

// nav > ul
//   list-style none
//   padding-left 0

main
  margin-top 0
  padding-top 3*margin

p
  margin-bottom 0

.logos
  text-align center
  > *
    margin-left margin

footer
  margin-top 3*margin
  padding-top 3*margin


//
// color & style
//


body
  font-family "AdobeGaramondPremierPro", "Hoefler Text", Palatino, "Palatino Linotype", serif
  color #222
  background #E1E1E1 url('../images/bg7.jpg')

a,
a:link,
a:visited
  color #335F8E
  -webkit-transition all 0.12s ease-out
  -moz-transition all 0.12s ease-out

a:active,
a:hover
  color #4989CE

h1, h2, h3
  font-weight normal

h3
  font-style italic

header, footer
  background-color #1d2327
  color #f2f2f2

header a:link,
header a:visited,
footer a,
footer a:link,
footer a:visited
  text-decoration none
  color #739ecd

header a:active, header a:hover
footer a:active, footer a:hover
  color #a2bfdd

header
  text-shadow #111 0px 1px 1px
  width 100%
  box-shadow inset 0 -20px 15px -20px #000
  border-bottom 2px solid #fff

header h1 a:link,
header h1 a:visited
  color white
  // font-size 5.9rem
  -moz-transition none
  -webkit-transition none
  font-size 2rem

header h2
  font-size 1.5rem
blockquote
  font-style italic
  border-left 3px solid rgba(0,0,0,.2)
  padding-left 1rem

$form-color = #222
$form-background-color = #1d2327
$form-background-color = #739ecd
$form-input-underline-color = darken($form-background-color, 50%)
$placeholder-color = $form-input-underline-color
.homepage
  form
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    p
      font-size 1.5rem
      padding 1rem
      background-color $form-background-color
      color $form-color

  input[placeholder]
    border none
    border-bottom 3px solid $form-input-underline-color
    background-color #faffbd
    background-color rgba(white, .4)
    max-width 100%
    &:focus, &:active
      background-color rgba(white, .8)

  input[placeholder] //, input[type=submit]
    color $form-color

  .btn {
    border: none;
    font-family: inherit;
    // font-size: inherit;
    font-size .9rem
    color: inherit;
    background: none;
    cursor: pointer;
    // padding: 25px 80px;
    padding .5rem
    display: inline-block;
    // margin: 15px 30px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 700;
    outline: none;
    position: relative;
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    transition: all 0.3s;
  }


  .btn:after {
    content: '';
    position: absolute;
    z-index: -1;
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    transition: all 0.3s;
  }

  $btn-color = #226fbe
  $btn-color = $form-input-underline-color
  /* Button 6 */
  .btn-6 {
    color: #fff;
    background: $btn-color;
    -webkit-transition: none;
    -moz-transition: none;
    transition: none;
  }

  .btn-6:active {
    top: 2px;
  }

  /* Button 6a */
  .btn-6a {
    border: 4px solid $btn-color;
  }

  .btn-6a:hover {
    background: transparent;
    color: $btn-color;
  }

  /* Button 6b */
  .btn-6b {
    border: 4px solid $btn-color;
    border-radius: 15px;
  }

  .btn-6b:hover {
    background: transparent;
    color: $btn-color;
  }


::-webkit-input-placeholder { /* WebKit, Blink, Edge */
  color: $placeholder-color;
  font-weight: 200;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
  color: $placeholder-color;
  font-weight: 200;
  opacity: 1;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
  color: $placeholder-color;
  font-weight: 200;
  opacity: 1;
}
:-ms-input-placeholder { /* Internet Explorer 10-11 */
  color: $placeholder-color;
  font-weight: 200;
}

